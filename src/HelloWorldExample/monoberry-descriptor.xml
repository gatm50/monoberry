  <id>com.example.MonoBerry_Test</id>
  <name>Hello MonoBerry!</name>
  <versionNumber>1.0.0</versionNumber>
  <buildId>1</buildId>
  <description>The MonoBerry-Test application</description>
  <author>burningsoda.com</author>
  <authorId>gYAAgGfacAFUFI7tJsXg2e2lxY0</authorId>

  <initialWindow>
    <systemChrome>none</systemChrome>
    <transparent>false</transparent>
  </initialWindow>

  <!-- We'll setup MonoBerry in app/native/monoberry -->
  <!--  1. Tell the runtime, where the libs are -->
  <!--<env var="LD_LIBRARY_PATH" value="app/native/lib"/>-->
  <env var="MONO_PATH" value="app/native/monoberry/lib" />
  <env var="MONO_LOG_LEVEL" value="debug" />
  <!--<env var="MONO_LOG_MASK" value="dll" />-->
  <!--  2. Include any needed libs -->
  <asset path="C:\Users\Gustavo\Desktop\monoberry\mono\lib\mono\4.0\mscorlib.dll">monoberry/lib/mono/4.0/mscorlib.dll</asset>
  <asset path="C:\Users\Gustavo\Desktop\monoberry\mono\lib\mono\4.0\System.dll">monoberry/lib/mono/4.0/System.dll</asset>
  <asset path="C:\Users\Gustavo\Desktop\monoberry\mono\lib\mono\4.0\System.Drawing.dll">monoberry/lib/mono/4.0/System.Drawing.dll</asset>
  <asset path="C:\Users\Gustavo\Desktop\monoberry\mono\lib\mono\4.0\System.Xml.dll">monoberry/lib/mono/4.0/System.Xml.dll</asset>
  <!--  3. Include the (platform dependent) runtime and use it as entry point -->
  <asset path="C:\Users\Gustavo\Desktop\monoberry\mono\bin\mono" entry="true" type="Qnx/Elf">monoberry/bin/mono</asset>
  <!--  4. Include our own (platform independent) code -->
  <asset path="bin/Debug">bin</asset>
  <!--  5. Tell the Mono runtime to run our code. -->
  <arg>app/native/bin/HelloWorldExample.exe</arg>

  <asset path="icon.png">icon.png</asset>
  <icon>
    <image>icon.png</image>
  </icon>

  <!--  The splash screen that will appear when your application is launching. Should be 1024x600. -->
